<% if user_signed_in? %>
  <%= simple_form_for @project do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :completion_status, label: "Completion Status" %>
    <%= f.input :success_status, label: "Success Status" %>
    <%= f.input :tag_list, label: "Tag List", action: :tag %>
    <%= f.input :avatar %>
    <%= f.input :resource1, label: "Resource 1" %>
    <%= f.input :resource2, label: "Resource 2" %>
    <%= f.input :resource3, label: "Resource 3" %>
    <%= f.input :resource4, label: "Resource 4" %>
    <%= f.input :resource5, label: "Resource 5" %>
    <%= f.submit %>
  <% end %>
<% else %>
  <h1>You're not allowed here!</h1>
<% end %>